    "version": "0.2.0",
    "configurations": [
    
        {
            "name": "Python Debugger: Flask",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_DEBUG": "1",
                "UPLOAD_FOLDER": "uploads/",
                "THUMBNAIL_FOLDER": "uploads/thumbnails",
                "PUBLIC_DNS_DOMAIN": "http://localhost:5000"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true
        }
    ]
}